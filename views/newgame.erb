<div class='settings'>
<img src='<%= session[:profile_picture] %>'>
<% if session[:authenticated] %>
<h1>Welcome, <%= session[:name] %>!</h1>
<% else %>
<h1>Welcome, Player One!</h1>
<% end %>
<p> Choose Difficulty </p>
<form method="post" action="startgame">
<input type="radio" name="difficulty" value="easy" checked>
<label>Easy</label>
<input type="radio" name="difficulty" value="hard">
<label>Hard</label>
<input type="radio" name="gridsize" value="3" checked>
<label>3x3</label>
<input type="radio" name="gridsize" value="4">
<label>4x4</label>
<input type="submit" value="Submit">
</form>
</div>